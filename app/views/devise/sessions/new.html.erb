<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Sign in</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url:
        session_path(resource_name), class: 'form-horizontal', role: "form") do |form| %>
          <%= form.error_notification %>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">
              <i class="fa fa-user"></i>
            </span>
            <%= form.input :email, label: false, required: true, autofocus: true,
            placeholder: 'Enter your email', aria: {describedby: "basic-addon1"},
            input_html: { class: 'form-control' } %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">
              <i class="fa fa-key"></i>
            </span>
            <%= form.input :password, label: false, required: true, placeholder: "Password",
            input_html: { class: 'form-control' } %>
          </div>
        </div>

        <div class="form-group">
          <%= form.input :remember_me, required: true,
          as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-group">
          <%= form.button :submit, "Sign in", class: "btn btn-success" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
