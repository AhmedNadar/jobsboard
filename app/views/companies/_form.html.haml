.row
  .col-sm-12
    .jobs.panel.panel-default
      .panel-heading
        %h3.panel-title New Company
      .panel-body
        =simple_form_for(@company, html: { multipart: true, class: 'form-horizontal' }) do |form|
          =form.error_notification

          =form.input :name, label: false, autofocus: true, required: true, placeholder: "Company Name"
          %small.job-subtitle "The Brown Boys"

          =form.input :location, label: false, required: true, placeholder: "Company Location"
          %small.job-subtitle "Toronto"

          =form.input :email, label: false,required: true, placeholder: "Company Email"

          =form.input :url, as: :url, label: false, required: true, placeholder: "Job link"

          =form.file_field :avatar, label: false, required: true
          %br/

          / %h2 Job Details
